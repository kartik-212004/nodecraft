{
  "name": "nodecraft",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:all": "turbo run build",
    "build:server": "turbo run build --filter=server",
    "build:web": "turbo run build --filter=web",
    "build:common": "turbo run build --filter=@repo/common",
    "build:env": "turbo run build --filter=@repo/env",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
